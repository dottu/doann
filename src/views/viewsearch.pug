                  .card.bg-light.carta
                    a(href='/thong-tin-book/'+bk.id) 
                      img(src="/uploads/"+bk.image, style = "width : 350px; height : 200px")
                    br
                    .card-body.pt-0#title
                      .div
                        span #{bk.title}
                      .cost
                        b #{bk.cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")} đ
                      .sale  
                        p #{sale.sale}
