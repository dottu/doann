  block stylesheet
.wrapper
  nav.navbar.navbar-expand.navbar-white.navbar-light(style = 'background: #3e8e41;padding-left: 250px')
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu' href='/' role='button')
          img.nav-item(src="/uploads/32x32.png" alt="alt")
      //- li.nav-item.d-none.d-sm-inline-block.lii
      //-   a.nav-link(href='/', style = 'color:white') Danh mục sản phẩm
      //-   ul
      //-     li
      //-       a(href='#') Link 1
      //-     li
      //-       a(href='#') Link 2
      //-   li
      //-     a(href='#') Link 3
      .dropdown
        button.dropbtn Danh mục sản phẩm
        .dropdown-content
          each dm in danhmuc 
            a(href="/"+dm.url) #{dm.namecategory} 
          //- a(href='#') Link 3

      //- li.nav-item.d-none.d-sm-inline-block.lii
      //-   a.nav-link(href='#',style = 'color:white') Tâm lý
      //- li.nav-item.d-none.d-sm-inline-block.lii
      //-   a.nav-link(href='/truyentranh',style = 'color:white') Truyện tranh
      // SEARCH FORM
      form.form-inline(action ="/search", method= 'GET', style = 'margin-left: 3rem!important',)
        .input-group.input-group-sm
          input.form-control.form-control-navbar(type='search' name="q" placeholder='Tìm kiếm ......' aria-label='Search', style = 'width: 550px', id = 'timkiem')
          .input-group-append
            button.btn.btn-navbar(type='submit')
              i.fas.fa-search
      div.lii
        //- a.nav-link(href='/logout', style = 'color : white') Đăng xuất
        .dropdown
          if(ten)
            button.dropbtn #{ten}
              img(src="/uploads/90e54b0a7a59948dd910ba50954c702e.png", alt="",style = 'width : 32px; height:32px; float : right')
              .dropdown-content
                a(href='thongtindonhang', style = 'color : white') Đơn hàng của bạn
                a(href='/logout', style = 'color : white') Đăng xuất
          else 
            button.dropbtn #{taikhoan}
              img(src="/uploads/90e54b0a7a59948dd910ba50954c702e.png", alt="",style = 'width : 32px; height:32px; float : right')
              .dropdown-content
                a(href='/login', style = 'color : white') Đăng nhập
                //- a(href='/logout', style = 'color : white') Đăng xuất

      div
        a(href="/gio-hang")
          img(src="/uploads/b80ad73e5e84aeb71c08e5d8d438eaa1.png" alt="alt", style ="width: 32px;height: 32px")
          - var tong = 0
          if(soluonggio == null)
            span.cart(id = 'add-to-cart') 0
          else
            - for(var i = 0;i < soluonggio.length;i++)
              - var tong = tong + soluonggio[i].soluongdat
            //- each a in soluonggio
            //-   - var tong = tong + a.soluongdat
            span.cart(id = 'add-to-cart') #{tong}
      // Right navbar lnks
  .container   
    block content
  aside.control-sidebar.control-sidebar-dark


